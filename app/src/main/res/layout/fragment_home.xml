<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Card: DR Program Types -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/dr_programs_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Informacije o DR programima"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />

                    <TextView
                        android:id="@+id/dr_programs_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pregled različitih tipova DR programa (cenovno zasnovani, podsticajni, itd.)."
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: Benefits of Participation -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/benefits_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Koristi od učestvovanja"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />

                    <TextView
                        android:id="@+id/benefits_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Objašnjenje potencijalnih koristi, kao što su uštede na računima, smanjenje potrošnje, i doprinos stabilnosti mreže."
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: Statistics and Benefits -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/statistics_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Statistika i benefiti"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />

                    <TextView
                        android:id="@+id/statistics_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vizuelni prikaz koliko je prosečan korisnik uštedeo kroz DR programe."
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <!-- Placeholder for a graph or statistics image -->
                    <ImageView
                        android:id="@+id/statistics_image"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher_foreground" />

<!--  todo sliku zameni-->

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
