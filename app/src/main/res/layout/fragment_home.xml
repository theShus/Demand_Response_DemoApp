<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/smart_city_energy_grid"
        android:contentDescription="Smart city with renewable energy sources"
        android:alpha="0.7" />

    <!-- Fancy Shape Behind Text for Better Visibility -->
    <View
        android:id="@+id/shapeBackground"
        android:layout_width="394dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true"
        android:alpha="0.9"
        android:background="@drawable/fancy_shape" />

    <!-- Title Text (Moved to Top) -->
    <TextView
        android:id="@+id/mainHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:paddingTop="32dp"
        android:shadowColor="#000000"
        android:shadowDx="8"
        android:shadowDy="8"
        android:shadowRadius="2"
        android:text="Optimize Your Energy Use, Save the Planet"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- Detailed Subtext (Placed in the Center with Additional Information) -->
    <TextView
        android:id="@+id/subText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:padding="16dp"
        android:text="Participate in Demand Response programs to reduce your energy costs while helping balance the grid. By making small adjustments during peak times, you contribute to a more sustainable, stable energy future."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Join Now Button (Larger and Green) -->
    <Button
        android:id="@+id/joinNowButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/subText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/rounded_button_background"
        android:elevation="6dp"
        android:text="Join Now"
        android:textColor="@android:color/white"
        android:textColorLink="#BD2D2D"
        android:textSize="20sp" />
</RelativeLayout>
