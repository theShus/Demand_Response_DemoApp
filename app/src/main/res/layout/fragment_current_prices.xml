<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.currentPrices.CurrentPricesFragment"
    android:padding="16dp">

    <!-- Heading for the Page -->
    <TextView
        android:id="@+id/heading_current_prices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Electricity Price"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <!-- Bar Chart for Electricity Price -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/electricityPriceChart"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/heading_current_prices"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Explanation and Prices for Zones (Combined Text) -->
    <TextView
        android:id="@+id/combined_zone_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/electricityPriceChart"
        tools:text="Price info here" />
</androidx.constraintlayout.widget.ConstraintLayout>
