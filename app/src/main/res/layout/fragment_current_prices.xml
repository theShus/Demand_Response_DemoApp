<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.currentPrices.CurrentPricesFragment"
    android:padding="16dp">

    <!-- Information Text -->
    <TextView
        android:id="@+id/electricity_price_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Informacije o trenutnim cenama na tržištu i predlozi za optimizaciju potrošnje."
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Line Chart for Electricity Price -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/electricityPriceChart"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/electricity_price_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Notification Info Text -->
    <TextView
        android:id="@+id/price_notification_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Automatska obaveštenja kada su cene energije visoke, kako bi korisnici mogli prilagoditi svoju potrošnju."
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/electricityPriceChart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
